<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFcccccc"></solid>
        </shape>
    </item>
    <item android:top="-3dp" android:bottom="0dp" android:left="-3dp" android:right="-3dp">
        <shape android:shape="rectangle">
            <padding android:left="10dp"
                android:top="15dp"
                android:right="10dp"
                android:bottom="15dp"></padding>
            <stroke android:width="2dp" android:color="#E8DDCD"></stroke>
            <solid android:color="#00000000"></solid>
        </shape>
    </item>

</layer-list>
