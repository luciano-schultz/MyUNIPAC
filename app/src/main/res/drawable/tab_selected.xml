<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFefefef"></solid>
        </shape>
    </item>
    <item android:top="-7dp" android:bottom="0dp" android:left="-7dp" android:right="-7dp">
        <shape android:shape="rectangle">
            <padding android:left="10dp"
                android:top="15dp"
                android:right="10dp"
                android:bottom="15dp"></padding>
            <stroke android:width="6dp" android:color="#E8DDCD"></stroke>
            <solid android:color="#036564"></solid>
        </shape>
    </item>

</layer-list>
